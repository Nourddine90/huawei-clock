    <script>
        // ØªØ­Ø¯ÙŠØ« Ø§Ù„ÙˆÙ‚Øª
        function updateTime() {
            const now = new Date();
            
            let hours = now.getHours();
            let minutes = now.getMinutes();
            let seconds = now.getSeconds();
            
            hours = hours < 10 ? '0' + hours : hours;
            minutes = minutes < 10 ? '0' + minutes : minutes;
            seconds = seconds < 10 ? '0' + seconds : seconds;
            
            document.getElementById('time').textContent = 
                `${hours}:${minutes}:${seconds}`;
            
            // Ø§Ù„ØªØ§Ø±ÙŠØ® Ø§Ù„Ø¹Ø±Ø¨ÙŠ
            const dateOptions = {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            };
            document.getElementById('date').textContent = 
                now.toLocaleDateString('ar-SA', dateOptions);
            
            // ØªØºÙŠÙŠØ± Ø§Ù„Ù„ÙˆÙ† Ø­Ø³Ø¨ Ø§Ù„ÙˆÙ‚Øª
            const timeElement = document.getElementById('time');
            if (hours < 6 || hours >= 18) {
                timeElement.style.color = '#ff66ff';
                timeElement.style.textShadow = '0 0 25px #ff66ff';
            } else if (hours < 12) {
                timeElement.style.color = '#ff9900';
                timeElement.style.textShadow = '0 0 25px #ff9900';
            } else {
                timeElement.style.color = '#00ffff';
                timeElement.style.textShadow = '0 0 25px #00ffff';
            }
        }
        
        setInterval(updateTime, 1000);
        updateTime();
        
        // PWA - Service Worker
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('sw.js')
                    .then(reg => console.log('Service Worker registered'))
                    .catch(err => console.log('Service Worker failed:', err));
            });
        }
        
        // ØªØ«Ø¨ÙŠØª PWA
        let deferredPrompt;
        const installBtn = document.getElementById('installBtn');
        
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            
            // Ø¥Ø¸Ù‡Ø§Ø± Ø²Ø± Ø§Ù„ØªØ«Ø¨ÙŠØª Ø¨Ø¹Ø¯ 3 Ø«ÙˆØ§Ù†ÙŠ
            setTimeout(() => {
                installBtn.style.display = 'block';
            }, 3000);
        });
        
        installBtn.addEventListener('click', () => {
            if (!deferredPrompt) return;
            
            installBtn.style.display = 'none';
            deferredPrompt.prompt();
            
            deferredPrompt.userChoice.then((choice) => {
                if (choice.outcome === 'accepted') {
                    console.log('ØªÙ… ØªØ«Ø¨ÙŠØª Ø§Ù„ØªØ·Ø¨ÙŠÙ‚');
                    alert('âœ… ØªÙ… ØªØ«Ø¨ÙŠØª ØªØ·Ø¨ÙŠÙ‚ HUAWEI Clock Ø¨Ù†Ø¬Ø§Ø­!');
                }
